<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">


        <div class="container">
            <a class="navbar-brand" href="/home"><img src="/assets/moth.png" alt="" width=20 height=20> Moth</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarSupportedContent">

                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/home">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/assignments">My Assignments</a>
                    </li>
                    
                    <% if (currentUser.role === "Admin" || currentUser.role === "PM") { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/manage">Manage Users</a>
                        </li>

                    <% } %>
                    
                
                </ul>
    
                <ul class="navbar-nav ml-auto">
                    <% if (currentUser.kind === "Demo" || currentUser.kind === "N/A") { %>
                        <li class="nav-item">
                            <a class="nav-link" href=""><%= currentUser.username %></a>
                        </li>
                    <% } %>
                    <% if (currentUser.kind !== "Demo" && currentUser.kind !== "N/A") { %>
                        <li class="nav-item">
                            <a class="nav-link" href=""><%= currentUser.username %>: <%=currentUser.role%></a>
                        </li>
                    <% } %>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Sign Out</a>
                    </li>
                </ul>

            
            </div>
        </div>
        
    </nav>

    <% if (error && error.length > 0) { %>
        <div class="container alert alert-danger my-3" role="alert">
            <%= error %>
        </div>
    <% } %>


</body>
