<%- include("./partials/header") %>
    <link rel="stylesheet" href="/stylesheets/index.css">
    <title>Sign Up - Moth</title>

</head>
<body>
    <div class="container">
        <div class="card" style="width: 25rem; margin: 10rem auto;">
            <div class="card-body">
                
                <div class="d-flex justify-content-center mt-4">
                    <img src="/assets/moth.png" alt="" width=40 height=40>
                </div>
                    
                <div class="d-flex justify-content-center mt-2">
                    <h1 class="card-title">Moth</h1>
                </div>
                    
    
                
            </div>
    
            <div class="container">
                <form action="/register" method="POST">
                    <div class="form-group">

                        <div class="d-block mx-4 mb-4">
                            <input class="form-control" name="username" type="text" placeholder="Username">
                        
                        </div>

                        <div class="d-block mx-4 my-4">
                            <input class="form-control" name="password" type="password" placeholder="Password">
                            
                        </div>

                        <div class="d-block mx-4 mt-4">
                            <input class="form-control" name="email" type="email" placeholder="E-mail Address" required>
                            
                        </div>

                        <% if (error && error.length > 0) { %>
                            <div class="d-block error mt-2 mx-4"><%= error %></div>


                        <% } %>

                        <div class="d-block justify-content-start mx-4 mt-4 mb-5">
                            <button type="submit" class="btn btn-dark btn-block">Sign Up</button>
                        </div>
                    
                    </div>
                </form>


                <div class="d-block center">Have an Account?</div>
                <a class="center" href="/login"> Sign In</a>
                
                <div class="my-4"></div>

                <div class="d-block center">Take a Look?</div>
                <a class="center" href="/demo"> View Demo</a>
    
                <div class="mb-5"></div>
    
    
            </div>
            
            
            
        </div>


    </div>
    
        


    
    
    





<%- include("./partials/footer") %>

